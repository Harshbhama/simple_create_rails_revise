<br>

<p> Create Post </p>
<div>
	<%= form_for @post, url: posts_new_path do |p| %>
		<%= p.label :title %>
		<%= p.text_area :title %>
		<br>
		<%= p.label :content %>
		<%= p.text_area :content %>
		<br>
		<%= p.submit %>			

		
	<% end %>


</div>

<p> Posts are</p>


<div>
	<% @posts.each do |post| %>
		Title----<%= post.title %>
		<br>
		Content----<%= post.content %>
		<%= link_to "Delete ", post_delete_path(post.id), method: :delete %>
		<br>
			<div>
				<p> CREATE COMMENT </p>
					<div>
				<%= form_for @comment, url: comments_create_path do |c| %>
					<%= c.hidden_field :post_id, value: post.id%>
					<%= c.label :Content%>
					<%= c.text_area :content%>
					<%= c.submit %>
				<% end %>
								<p>--------Comments are</p>

					</div>
					<% post.comments.each do |comment| %>
						<p>..<%= comment.content%></p>
					<% end %>
			</div>
			<div>

				<p> CREATE IMAGES </p>
					<div>
						
						<%= form_for @image, url: images_path do |i| %>
						<%= i.label :Image %>
						<%= i.file_field :avatar %>
						<%= i.hidden_field :post_id, value: post.id %>
						<%= i.submit %>
						<% end %>

					</div>
			</div>

			<div>
				<% post.images.each do |image| %>
				<%= image_tag image.avatar.url, id:"image-style" %>
				<% end %>
			</div>
			
	<% end %>
	
</div>




